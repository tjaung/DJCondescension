{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "lib": ["dom", "es2015", "esnext"],
    "types": ["three"],
    "jsx": "react-jsx" // Use "react-jsx" for React 17+ or "react" for older versions
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
